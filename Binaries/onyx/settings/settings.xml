<settings>

	<!-- META DATA -->
	<metadata>
		<version>3.0.5</version>
	</metadata>

	<!-- CORE SETTINGS FOR RENDERING -->
	<core>
	
		<render>
			<!-- the width / height of bitmaps -->
			<bitmapData>
				<width>320</width>
				<height>240</height>
			</bitmapData>
			
			<!-- the start-up quality of flash, recommended: omit for medium
				<quality>high</quality>
			-->
		</render>
		
		<!-- midi settings -->
		<midi>
			<enabled>false</enabled>
		</midi>
		
		<!-- custom ordering of blendmodes for blendmode controls -->
		<blendModes>
			<normal/>
			<lighten/>
			<darken/>
			<overlay/>
			<hardlight/>
			<multiply/>
			<screen/>
			<add/>
			<subtract/>
			<difference/>
			<invert/>
		</blendModes>
		
	</core>
	
	<!-- UI STATES -->
	<ui>
		
