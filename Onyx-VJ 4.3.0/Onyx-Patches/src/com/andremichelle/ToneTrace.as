package com.andremichelle{	import flash.display.BlendMode;		import flash.display.Sprite;	import flash.events.Event;		/**	 * @author aM	 */	public class ToneTrace extends Sprite 	{		private var _phase: Number;				public function ToneTrace()		{			_phase = 0.0;						 addEventListener( Event.ENTER_FRAME, enterFrame );		}				private function enterFrame( event: Event ): void		{			graphics.clear();						if( _phase > 1.0 )			{				removeEventListener( Event.ENTER_FRAME, enterFrame );				parent.removeChild( this );			}						_phase += .02;						graphics.lineStyle( 0, 0xFFFFFF, ( 1.0 - _phase ) * ( 1.0 - _phase ) );			graphics.drawCircle( 0, 0, 6 + _phase * 16 );		}	}}