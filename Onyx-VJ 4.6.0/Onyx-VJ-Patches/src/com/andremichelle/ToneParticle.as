package com.andremichelle{	import flash.display.Sprite;	import flash.utils.setTimeout;		/**	 * @author aM	 */	public class ToneParticle extends Sprite 	{		private var _note: uint;		public function ToneParticle( note: uint )		{			_note = note;			_init( );		}				public function createToneGenerator( deltaSamples: int, octave: uint, pan: Number ): IToneGenerator		{			setTimeout( _blink, deltaSamples / 44.1 );						return new Tone( deltaSamples, _note, octave, pan );		}				private function _init(): void		{			_unblink();								}				private function _blink(): void		{			graphics.clear();			graphics.beginFill( 0xFFFFFF );			graphics.drawCircle( 0, 0, 4 );			graphics.endFill();						var t: ToneTrace = new ToneTrace();						t.x = x;			t.y = y;						parent.addChild( t );						setTimeout( _unblink, 100 );		}				private function _unblink(): void		{			graphics.clear();			graphics.beginFill( 0xFFFFFF );			graphics.drawCircle( 0, 0, 6 );			graphics.endFill();		}	}}